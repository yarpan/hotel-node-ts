{
    "watch": [
        "src"
    ],
    "ext": "ts,json",
    "ignore": [
        "src/**/*.spec.ts",
        "src/**/*.test.ts"
    ],
    "exec": "ts-node -r tsconfig-paths/register src/server.ts",
    "env": {
        "NODE_ENV": "development"
    },
    "restartable": "rs",
    "delay": 1500,
    "verbose": false,
    "signal": "SIGINT"
}