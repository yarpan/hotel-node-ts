{
    "watch": [
        "src"
    ],
    "ext": "ts,json",
    "ignore": [
        "src/**/*.spec.ts",
        "src/**/*.test.ts"
    ],
    "exec": "ts-node -r tsconfig-paths/register src/index.ts",
    "env": {
        "NODE_ENV": "development"
    },
    "restartable": "rs",
    "delay": 1000,
    "verbose": true
}